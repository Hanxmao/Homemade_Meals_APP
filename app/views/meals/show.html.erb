<div class="container mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="card-body pe-md-0">
                    <div class="show-image-container ">
        <%= image_tag @meal.img_url, class:"show-image" %>
    </div>
    <div class="card col-5 ms-3">
        <div class="card-body">
            <div class="card-body">
                <h5 class="card-title"><%= @meal.title %></h5>
                <p class="card-text"><%= @meal.description %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Ingredients: <%= @meal.ingredients %></li>
                <li class="list-group-item">Price: <%= number_to_currency(@meal.price, precision: 2) %></li>
                <li class="list-group-item">Cook: <%= @meal.user.username %></li> <%# this could link to user show page of the cook #%> 
              </ul>
              <div class="card-body">
                <a href="<%=new_meal_order_path(@meal)%>" class="btn btn-warning">Order Now</a>
              </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-10 offset-md-1 mt-5 p-3">
            <h3>Leave a Review</h3>
        <% if @review.errors.any? %> 
            <% @review.errors.full_messages.each do |msg| %> 
                <p><%= msg %> </p>
            <% end %> 
        <% end %> 
        
        <%= form_with(model:[@meal, @review]) do |form|%>
        <div class="mb-3">
            <%=form.label :rating%>
            <br>
            <% 5.times do |i|%>
                <%=form.radio_button :rating, i + 1%>
                <%=form.label :rating, i + 1%>
            <% end %>
          </div>    

            <div class="mb-3">
                <%= form.label :body, "Review", class: "form-label" %>
                <br>
                <%= form.text_area :body, cols: 50, rows: 5, class: "form-control" %>
            </div>
            <%= form.submit class: "btn btn-dark"%>
        <% end %>
    </div>

    <div class="col-md-10 offset-md-1 mb-3 p-3">
        <h3>All Reviews</h3>
        <% @reviews.each do |review|%>
            <% if(review.is_approved) %>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p>Review: <%= review.body %></p>
                <p>By: <%= review.user.username %></p>
                <p class="text-muted mb-4"><small>Posted <%= time_ago_in_words(review.created_at) %> ago </small></p>
            <% else %>
                <div>
                    <% if can? :crud, @meal %>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        <p>Review: <%= review.body %></p>
                        <p>By: <%= review.user.username %></p>
                        <p class="text-muted mb-4"><small>Posted <%= time_ago_in_words(review.created_at) %> ago </small></p>
                        <%= button_to "Approve", meal_review_path(@meal, review), method: :patch, class:"btn btn-dark"%>
                    <% end %>
                </div>
            <% end %>

        <% end %> 
    </div>
</div>
</div>