<h2>Place an order</h2>

<% if @order.errors.any? %> 
    <% @order.errors.full_messages.each do |msg| %> 
        <p><%= msg %> </p>
    <% end %> 
<% end %> 

<div>
    <p>Meal Information</p>
    <p><strong>Meal Name: </strong> <%=@meal.title%></p>
    <p><strong>Cook Name: </strong> <%=@meal.user.username%></p>
    <p><strong>Description: </strong> <%=@meal.description%></p>
</div>

<%= form_with(model:[@meal, @order]) do |form|%>
    <div class="mb-3">
        <%= form.label :recipient, class: "form-label"%>
        <br>
        <%= form.text_field :recipient, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :address, class: "form-label" %>
        <br>
        <%= form.text_area :address, cols: 50, rows: 5, class: "form-control" %>
    </div>
    <%= form.submit class: "btn btn-info mb-3"%>
<% end %>